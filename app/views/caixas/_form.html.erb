<%= form_with(model: caixa, local: true) do |form| %>
<% if caixa.errors.any? %>
<div id="error_explanation">
  <h2><%= pluralize(caixa.errors.count, "error") %> prohibited this caixa from being saved:</h2>
  
  <ul>
    <% caixa.errors.full_messages.each do |message| %>
    <li><%= message %></li>
    <% end %>
  </ul>
</div>
<% end %>

<div class="form-caixa">
  <div class="row">
    
    <div class="col">
      <div class="field">
        <p>
          <strong>
            <%= form.label :data %><br/>
            <%= form.datetime_select :data, id: :caixa_data %>
          </strong>
        </p> 
      </div>
      <div class="field">
        <p>
          <strong>
            <%= form.label :caixa_inicial %><br/>
            <%= form.text_field :caixa_inicial, id: :caixa_caixa_inicial %>
          </strong>
        </p>
      </div>
      <div class="field">
        <p>
          <strong>
            <%= form.label :dinheiro %><br/>
            <%= form.text_field :dinheiro, id: :caixa_dinheiro %>
          </strong>
        </p>
      </div>
      <div class="field">
        <p>
          <strong>
            <%= form.label :saida %><br/>
            <%= form.text_field :saida, id: :caixa_saida %>
          </strong>
        </p>
      </div>
    </div>
    
    <div class="col">
      <div class="field">
        <p>
          <strong>
            <%= form.label :descricao %><br/>
            <%= form.text_area :descricao, id: :caixa_descricao %>
          </strong>
        </p>
      </div>
      <div class="field">
        <p>
          <strong>
            <%= form.label :cheque %><br/>
            <%= form.text_field :cheque, id: :caixa_cheque %>
          </strong>
        </p>
      </div>
      <div class="field">
        <p>
          <strong>
            <%= form.label :maquineta_loja %><br/>
            <%= form.text_field :maquineta_loja, id: :caixa_maquineta_loja %>
          </strong>
        </p>
      </div>
      <div class="field">
        <p>
          <strong>
            <%= form.label :maquineta_motoboy %><br/>
            <%= form.text_field :maquineta_motoboy, id: :caixa_maquineta_motoboy %>
          </strong>
        </p>
      </div>
    </div>
   
    <div class="col">
      <div class="field">
        <p>
          <strong>
            <%= form.label :cappta %><br/>
            <%= form.text_field :cappta, id: :caixa_cappta %>
          </strong>
        </p>
      </div>
      <div class="field">
        <p>
          <strong>
            <%= form.label :mundipagg %><br/>
            <%= form.text_field :mundipagg, id: :caixa_mundipagg %>
          </strong>
        </p>
      </div>
      <div class="field">
        <p>
          <strong>
            <%= form.label :caixa_final %><br/>
            <%= form.text_field :caixa_final, id: :caixa_caixa_final %>
          </strong>
        </p>
      </div>
      <div class="actions">
        <%= form.submit 'Criar', class: 'button_agenda', id: 'input_new_agenda' %><br/><br/>
        <%= form.submit 'Limpar', :type => 'reset', class: 'button_agenda', id: 'input_clear_agenda' %>
      </div>
    </div>
  </div>
  
</div>

<% end %>
